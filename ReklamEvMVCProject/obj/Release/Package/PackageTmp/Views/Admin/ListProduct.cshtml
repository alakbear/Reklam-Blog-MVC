@model ReklamEvMVCProject.Models.PRODUCT

@{
    ViewBag.Title = "Məhsullar";
    Layout = "~/Views/Shared/AdminLayoutPage.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Məhsullar</h1>
    </div>
</div>

<div class="row">

    @foreach (var item in ViewBag.ProductList)
    {
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <div class="image">

                        <img src="@item.SINGLE_PHOTO" alt="#" class="img-responsive" style="width: 360px; height: 216px;">
                        @*<img src="@item." alt="Image" />*@
                        @*<img src="@Url.Content(item.SINGLE_PHOTO)" class="img-responsive" alt="Image" />*@
                        @*<img src="~/imageServer/@Url.Content(item.SINGLE_PHOTO)" class="img-responsive" />*@

                    </div>
                    <div class="pull-left">
                        @item.NAME
                    </div>
                    <div class="pull-right">
                        @item.PRICE <b>AZN</b>
                    </div>
                </div>
                <div class="panel-body clearfix" style="height: 156px; overflow-y: hidden;">
                    @item.DESCRIPTION
                </div>
                <div class="panel-footer clearfix">
                    <div class="pull-left">
                        <button type="button" class="btn btn-danger my-delete-btn" data-id="@item.ID">Sil</button>
                        @*<a href="/Admin/EditProduct/@item.ID" type="button" class="btn btn-primary my-edit-btn" data-id="@item.ID">Düzəlt</a>*@
                        @*<button type="button" class="btn btn-primary my-edit-btn" data-id="@item.ID">Düzəlt</button>*@
                        @Html.ActionLink("Yenilə", "EditProduct", "Admin", new { id = item.ID }, new { @class = "btn btn-primary my-edit-btn" })
                    </div>
                    <div class="pull-right">
                        @item.CATEGORY_ID
                    </div>
                </div>
            </div>
        </div>
    }

</div>

